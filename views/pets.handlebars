<style>
  :root{
    background-color: #ecf9ff;
    
  }
 #text{
   color: black;
   text-align: center;
 }
 #innerText{
   color: orange;
   text-align: center;
 }

 .card_content{
   background-color: white;
   border-color: orange;
 }


</style>


{{#each pets as |pet| }}
<div class=" align-items-center project">

  <li class="col">
                      <div class="col">
                       
                        <div class="card_content">
                          <h2 class="card_title"><div id="text">Name:</div><div id="innerText">{{pet.name}}</div></h2>
                          <p class="card_text"><div id="text"> Breed</div><div id="innerText">{{pet.breed}} </div></p>
                          <p class="card_text"><div id="text"> Toys:</div><div id="innerText">{{pet.toys}}</div> </p>
                          <p class="card_text"><div id="text"> Notes:</div><div id="innerText">{{pet.notes}}</div> </p>
                        </div>

                      </div>
   </li>
                    

</div>
{{/each}}
   